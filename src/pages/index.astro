---
import Layout from '../layouts/Layout.astro';

const posts = [
	{
		title: "Google Ads 2026: Strategii în Recesiune",
		description: "Cum să muți focusul pe Profit-First Bidding când piața se contractă.",
		url: "/blog/google-ads-2026-recesiune",
		tag: "Economic",
		date: "14 Februarie 2026"
	},
	{
		title: "AdTech 2026: Revoluția First-Party Data",
		description: "Ghid tehnic despre Server-Side Tracking și supraviețuirea fără cookies.",
		url: "/blog/adtech-2026-tracking",
		tag: "Tehnologie",
		date: "14 Februarie 2026"
	}
];
---

<Layout title="Roa Marketing | Hub de Performanță AdOps & Media Buying">
	<header class="relative overflow-hidden pt-16 pb-12 border-b border-white/5">
		<div class="container mx-auto px-6 relative z-10">
			<div class="max-w-4xl">
				<nav class="flex gap-8 mb-16 text-sm font-bold uppercase tracking-widest text-slate-500">
					<a href="/" class="text-white border-b border-cyan-500 pb-1">Acasă</a>
					<a href="/despre" class="hover:text-cyan-400 transition-colors">Expertiză</a>
					<a href="/servicii/tracking-fara-cookies" class="hover:text-cyan-400 transition-colors">Servicii</a>
					<a href="#simulator" class="hover:text-cyan-400 transition-colors">Simulator</a>
				</nav>
				<h1 class="text-6xl md:text-8xl font-black leading-[0.9] mb-8 italic">
					ROA <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-600">ENGINE.</span>
				</h1>
				<p class="text-xl text-slate-400 max-w-2xl leading-relaxed">
					Transformăm datele în profit. Arhitectură de Media Buying pentru 2026.
				</p>
			</div>
		</div>
	</header>

	<main class="container mx-auto px-6">
		
		<!-- SIMULATOR WITH CHART -->
		<section id="simulator" class="py-24">
			<div class="bg-white/5 border border-white/10 rounded-[48px] overflow-hidden backdrop-blur-2xl">
				<div class="grid grid-cols-1 lg:grid-cols-2">
					<div class="p-12 border-r border-white/10">
						<h2 class="text-3xl font-bold mb-8">Configurează Variabilele</h2>
						<div class="space-y-10">
							<div class="space-y-4">
								<div class="flex justify-between items-center"><label class="text-slate-400">Buget Lunar (€)</label><span id="val-budget" class="text-2xl font-black">5000</span></div>
								<input type="range" id="input-budget" min="1000" max="100000" step="1000" value="5000" class="w-full accent-cyan-500">
							</div>
							<div class="space-y-4">
								<div class="flex justify-between items-center"><label class="text-slate-400">ROAS Actual (x)</label><span id="val-roas" class="text-2xl font-black">3.0</span></div>
								<input type="range" id="input-roas" min="0.5" max="10" step="0.1" value="3.0" class="w-full accent-purple-500">
							</div>
							<div class="space-y-4">
								<div class="flex justify-between items-center"><label class="text-slate-400">Marjă Netă (%)</label><span id="val-margin" class="text-2xl font-black">25</span></div>
								<input type="range" id="input-margin" min="5" max="70" step="5" value="25" class="w-full accent-blue-500">
							</div>
						</div>
					</div>

					<div class="p-12 bg-black/20 relative">
						<h2 class="text-3xl font-bold mb-8 text-white">Analiza Profitului</h2>
						<div class="h-[250px] mb-8">
							<canvas id="profitChart"></canvas>
						</div>
						<div class="p-6 rounded-2xl bg-cyan-500/10 border border-cyan-500/20">
							<p class="text-sm text-cyan-400 font-bold mb-1">Potențial ROA Optimization</p>
							<h4 class="text-4xl font-black" id="res-gap">+0€</h4>
						</div>
						<a href="#contact" class="mt-8 block w-full py-4 bg-white text-black text-center font-black rounded-xl hover:bg-cyan-400 transition-all">Rezervă Audit Tehnic</a>
					</div>
				</div>
			</div>
		</section>

		<!-- UPDATED BLOG SECTION -->
		<section class="py-24 border-t border-white/5">
			<h2 class="text-4xl font-bold mb-12">Raportări de Piață 2026</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				{posts.map(post => (
					<a href={post.url} class="group border-l border-white/10 pl-8 py-4 hover:border-cyan-500 transition-all">
						<span class="text-cyan-400 text-xs font-bold uppercase tracking-tighter">{post.tag}</span>
						<h3 class="text-3xl font-bold mt-2 mb-4 group-hover:text-cyan-400">{post.title}</h3>
						<p class="text-slate-400 mb-4">{post.description}</p>
						<span class="text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity">Citește Analiza →</span>
					</a>
				))}
			</div>
		</section>
	</main>

	<footer id="contact" class="py-32 bg-slate-900 border-t border-white/5">
		<div class="container mx-auto px-6 text-center">
			<h2 class="text-5xl font-black mb-8">Treci la nivelul următor.</h2>
			<p class="text-xl text-slate-400 mb-12">AdOps-ul nu este o opțiune în 2026. Este supraviețuire.</p>
			<a href="mailto:contact@roa-marketing.com" class="px-12 py-6 bg-cyan-500 text-black font-black text-xl rounded-2xl">Start Parteneriat</a>
		</div>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script is:inline>
		let chart;
		const ctx = document.getElementById('profitChart');

		function initChart() {
			chart = new Chart(ctx, {
				type: 'bar',
				data: {
					labels: ['Actual', 'Optimizat (ROA)'],
					datasets: [{
						label: 'Profit Net (€)',
						data: [0, 0],
						backgroundColor: ['#334155', '#06b6d4'],
						borderRadius: 12
					}]
				},
				options: {
					responsive: true,
					maintainAspectRatio: false,
					scales: { 
						y: { beginAtZero: true, grid: { color: '#1e293b' }, ticks: { color: '#64748b' } },
						x: { grid: { display: false }, ticks: { color: '#fff', font: { weight: 'bold' } } }
					},
					plugins: { legend: { display: false } }
				}
			});
		}

		function update() {
			const b = parseInt(document.getElementById('input-budget').value);
			const r = parseFloat(document.getElementById('input-roas').value);
			const m = parseInt(document.getElementById('input-margin').value) / 100;

			document.getElementById('val-budget').innerText = b.toLocaleString();
			document.getElementById('val-roas').innerText = r.toFixed(1);
			document.getElementById('val-margin').innerText = (m * 100).toFixed(0);

			const currentRevenue = b * r;
			const currentProfit = (currentRevenue * m) - b;
			
			const optimizedROAS = r * 1.25; // +25% optimization
			const optimizedProfit = (b * optimizedROAS * m) - b;
			
			const gap = Math.max(0, optimizedProfit - currentProfit);
			document.getElementById('res-gap').innerText = "+" + Math.round(gap).toLocaleString() + "€";

			chart.data.datasets[0].data = [Math.round(currentProfit), Math.round(optimizedProfit)];
			chart.update();
		}

		document.addEventListener('DOMContentLoaded', () => {
			initChart();
			update();
			['input-budget', 'input-roas', 'input-margin'].forEach(id => {
				document.getElementById(id).addEventListener('input', update);
			});
		});
	</script>
</Layout>
