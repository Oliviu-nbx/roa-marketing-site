---
import Layout from '../layouts/Layout.astro';

const posts = [
	{
		title: "Google Ads 2026: Strategii în Recesiune",
		description: "Cum să muți focusul pe Profit-First Bidding când piața se contractă.",
		url: "/blog/google-ads-2026-recesiune",
		tag: "Analiză",
		date: "14 Februarie 2026"
	},
	{
		title: "AdTech 2026: Revoluția First-Party Data",
		description: "Ghid tehnic despre Server-Side Tracking și supraviețuirea fără cookies.",
		url: "/blog/adtech-2026-tracking",
		tag: "Tehnologie",
		date: "14 Februarie 2026"
	}
];
---

<Layout title="Roa Marketing — Știri & Analize">
	<header class="relative overflow-hidden pt-12 pb-8 border-b border-white/5">
		<div class="container mx-auto px-6 relative z-10">
			<nav class="flex gap-8 mb-6 text-sm font-bold uppercase tracking-widest text-slate-500">
				<a href="/" class="text-white border-b border-cyan-500 pb-1">Știri</a>
				<a href="/despre" class="hover:text-cyan-400 transition-colors">Despre</a>
				<a href="/contact" class="hover:text-cyan-400 transition-colors">Contact</a>
			</nav>
			<h1 class="text-4xl md:text-6xl font-black leading-tight mb-4">Roa Marketing — Știri și analize din marketingul digital</h1>
			<p class="text-lg text-slate-400 max-w-2xl leading-relaxed">Actualizări zilnice, analize și ghiduri practice pentru profesioniștii în marketing și hosting din România.</p>
		</div>
	</header>

	<main class="container mx-auto px-6 py-12">
		<section class="py-8">
			<h2 class="text-3xl font-bold mb-6">Ultimele articole</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				{posts.map(post => (
					<a href={post.url} class="group border-l border-white/10 pl-6 py-6 hover:border-cyan-500 transition-all">
						<span class="text-cyan-400 text-xs font-bold uppercase tracking-tighter">{post.tag}</span>
						<h3 class="text-2xl font-bold mt-2 mb-2 group-hover:text-cyan-400">{post.title}</h3>
						<p class="text-slate-400 mb-3">{post.description}</p>
						<small class="text-sm text-slate-500">{post.date}</small>
					</a>
				))}
			</div>
		</section>

		<section class="py-8 border-t border-white/5">
			<h2 class="text-2xl font-bold mb-4">Categorii populare</h2>
			<div class="flex gap-4">
				<a href="/tag/tehnologie" class="px-4 py-2 bg-white/5 rounded-md">Tehnologie</a>
				<a href="/tag/analiza" class="px-4 py-2 bg-white/5 rounded-md">Analiză</a>
				<a href="/tag/security" class="px-4 py-2 bg-white/5 rounded-md">Securitate</a>
			</div>
		</section>
	</main>

	<footer class="py-12 bg-slate-900 border-t border-white/5">
		<div class="container mx-auto px-6 text-center">
			<p class="text-slate-400">© {new Date().getFullYear()} Roa Marketing — Știri. Pentru colaborări: <a href="mailto:contact@roa-marketing.com" class="text-cyan-400">contact@roa-marketing.com</a></p>
		</div>
	</footer>
</Layout>
