---
interface Props {
  title: string;
}

const { title } = Astro.props;
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="ro">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Roa Marketing - Știri și analize din marketingul digital" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-950 text-white selection:bg-cyan-500">
		<header class="bg-slate-950 border-b border-white/5">
			<div class="container mx-auto px-6 py-6 flex items-center justify-between">
				<a href="/" class="text-2xl font-black tracking-tight">Roa Marketing</a>
				<nav class="flex gap-6 items-center text-sm font-bold uppercase tracking-widest text-slate-400">
					<a href="/" class="hover:text-cyan-400 transition-colors">Acasă</a>
					<a href="/blog" class="hover:text-cyan-400 transition-colors">Știri</a>
					<a href="/despre" class="hover:text-cyan-400 transition-colors">Despre</a>
					<a href="/contact" class="hover:text-cyan-400 transition-colors">Contact</a>
				</nav>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer class="py-8 bg-slate-900 border-t border-white/5 mt-12">
			<div class="container mx-auto px-6 text-center">
				<p class="text-slate-400">© {year} Roa Marketing — Știri. Pentru colaborări: <a href="mailto:contact@roa-marketing.com" class="text-cyan-400">contact@roa-marketing.com</a></p>
				<p class="text-sm text-slate-500 mt-2">Urmărește-ne: <a href="#" class="text-cyan-400">X</a> • <a href="#" class="text-cyan-400">LinkedIn</a></p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
	}
</style>
