---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishDate?: string;
  author?: string;
}

const { 
  title, 
  description = "Roa Marketing - Știri și analize strategice din marketingul digital, PPC și SEO.", 
  image = "/assets/ppc-trends.png",
  type = "website",
  publishDate,
  author = "Roa Marketing Team"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
const year = new Date().getFullYear();

// Schema.org JSON-LD
const schema = type === 'article' ? {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "image": [socialImageURL.href],
  "datePublished": publishDate,
  "dateModified": publishDate,
  "author": [{
      "@type": "Organization",
      "name": author,
      "url": Astro.site
  }]
} : {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Roa Marketing",
  "url": Astro.site,
};
---

<!doctype html>
<html lang="ro">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

        <!-- SEO -->
		<title>{title} | Roa Marketing</title>
		<meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content={type} />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={socialImageURL} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={socialImageURL} />

        <!-- Schema.org -->
        <script type="application/ld+json" set:html={JSON.stringify(schema)} />
	</head>
	<body class="bg-slate-900 text-white selection:bg-cyan-500 font-sans antialiased">
		<header class="fixed w-full z-50 bg-slate-950/80 backdrop-blur-md border-b border-white/5">
			<div class="container mx-auto px-6 h-20 flex items-center justify-between">
				<a href="/" class="text-2xl font-black tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-white to-slate-400">
                    ROA<span class="text-cyan-400">.</span>
                </a>
				<nav class="hidden md:flex gap-8 items-center text-sm font-bold uppercase tracking-widest text-slate-400">
					<a href="/" class="hover:text-cyan-400 transition-colors">Acasă</a>
					<a href="/blog" class="hover:text-cyan-400 transition-colors">Blog</a>
				</nav>
			</div>
		</header>

		<main class="pt-24 min-h-screen">
			<slot />
		</main>

		<footer class="py-12 bg-slate-900 border-t border-white/5 mt-20">
			<div class="container mx-auto px-6 text-center">
                <div class="flex justify-center gap-6 mb-8 text-slate-400">
                    <a href="/" class="hover:text-white transition-colors">Acasă</a>
                    <a href="/blog" class="hover:text-white transition-colors">Blog</a>
                    <a href="/sitemap.xml" class="hover:text-white transition-colors">Sitemap</a>
                </div>
				<p class="text-slate-500 text-sm">© {year} Roa Marketing. Toate drepturile rezervate.</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 6, 182, 212;
		--accent-light: 34, 211, 238;
		--accent-dark: 8, 145, 178;
	}
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
	}
    body {
        background-color: #0f172a;
        background-image:
            radial-gradient(circle at 25% 25%, rgba(14,165,233,0.08), transparent 45%),
            radial-gradient(circle at 75% 0%, rgba(34,211,238,0.05), transparent 40%),
            url("data:image/svg+xml;base64,");
        background-attachment: fixed;
        position: relative;
        overflow-x: hidden;
    }

    body::before {
        content: "";
        position: fixed;
        inset: 0;
        z-index: -1;
        background: radial-gradient(circle at 20% 20%, rgba(34,211,238,0.15), transparent 50%),
                    radial-gradient(circle at 80% 30%, rgba(14,165,233,0.12), transparent 45%),
                    radial-gradient(circle at 50% 80%, rgba(56,189,248,0.1), transparent 40%);
        animation: aurora 25s ease-in-out infinite alternate;
        pointer-events: none;
    }

    @keyframes aurora {
        0% { transform: translate3d(0px, 0px, 0) scale(1); opacity: 0.8; }
        50% { transform: translate3d(-40px, 20px, 0) scale(1.05); opacity: 0.6; }
        100% { transform: translate3d(30px, -30px, 0) scale(1.08); opacity: 0.9; }
    }
    /* Typography improvements */
    h1, h2, h3, h4, h5, h6 {
        letter-spacing: -0.025em;
    }
</style>
 
